<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container mt-3">
    <h1 class="border-bottom">All Houses</h1>
    <ul class="housesUL">
        <% for(let house of houses) { %>
            <div class="card mb-1" >
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%= house.images[0].url %> ">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= house.location%> $<%= house.price %>
                            </h5>
                            <p class="card-text"><%= house.streetLine %>, <%= house.city %>, <%= house.state %> <%= house.zip %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= house.beds %> Beds &nbsp<%= house.baths %> Baths &nbsp&nbsp&nbsp<%= house.sqFt %> Sq.Ft. </small>
                            </p>
                            <a class="btn btn-primary" href="/houses/<%=house._id%>">View House</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </ul>
</div>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const houses = { features: <%- JSON.stringify(houses) %>};
</script>
    
<script src="/javascripts/clusterMap.js"></script>